<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc">

    <Button
        android:id="@+id/button_newNotes"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:background="@color/colorPrimary"
        android:fontFamily="monospace"
        android:text="Create new"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_myNotes"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/button_newNotes"
        android:layout_below="@+id/button_newNotes"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:fontFamily="monospace"
        android:text="My Notes"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_dashboard"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/button_myNotes"
        android:layout_below="@+id/button_myNotes"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:focusableInTouchMode="false"
        android:focusedByDefault="false"
        android:fontFamily="monospace"
        android:text="Dashboard"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/button_dashboard"
        android:layout_below="@+id/button_dashboard"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:fontFamily="monospace"
        android:text="My Calender"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:text="Home"
        android:textAlignment="center" />

</RelativeLayout>